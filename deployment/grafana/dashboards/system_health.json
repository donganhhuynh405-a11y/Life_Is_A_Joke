{
  "__inputs": [],
  "__requires": [
    {"type": "grafana", "id": "grafana", "name": "Grafana", "version": "9.0.0"},
    {"type": "datasource", "id": "prometheus", "name": "Prometheus", "version": "1.0.0"}
  ],
  "annotations": {"list": []},
  "description": "System health: CPU, memory, disk, cache, and process metrics",
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "id": null,
  "links": [],
  "panels": [
    {
      "collapsed": false,
      "gridPos": {"h": 1, "w": 24, "x": 0, "y": 0},
      "id": 1,
      "title": "Resource Usage",
      "type": "row"
    },
    {
      "datasource": {"type": "prometheus", "uid": "${datasource}"},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "max": 100,
          "min": 0,
          "thresholds": {"mode": "absolute", "steps": [
            {"color": "green", "value": null},
            {"color": "yellow", "value": 70},
            {"color": "red", "value": 90}
          ]},
          "unit": "percent"
        }
      },
      "gridPos": {"h": 5, "w": 6, "x": 0, "y": 1},
      "id": 2,
      "options": {"minVizHeight": 75, "minVizWidth": 75, "orientation": "auto", "reduceOptions": {"calcs": ["lastNotNull"], "fields": "", "values": false}, "showThresholdLabels": false, "showThresholdMarkers": true},
      "title": "CPU Usage",
      "type": "gauge",
      "targets": [
        {"datasource": {"type": "prometheus", "uid": "${datasource}"}, "expr": "100 - (avg by(instance) (rate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)", "legendFormat": "CPU %", "refId": "A"}
      ]
    },
    {
      "datasource": {"type": "prometheus", "uid": "${datasource}"},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "max": 100,
          "min": 0,
          "thresholds": {"mode": "absolute", "steps": [
            {"color": "green", "value": null},
            {"color": "yellow", "value": 75},
            {"color": "red", "value": 90}
          ]},
          "unit": "percent"
        }
      },
      "gridPos": {"h": 5, "w": 6, "x": 6, "y": 1},
      "id": 3,
      "options": {"minVizHeight": 75, "minVizWidth": 75, "orientation": "auto", "reduceOptions": {"calcs": ["lastNotNull"], "fields": "", "values": false}, "showThresholdLabels": false, "showThresholdMarkers": true},
      "title": "Memory Usage",
      "type": "gauge",
      "targets": [
        {"datasource": {"type": "prometheus", "uid": "${datasource}"}, "expr": "100 * (1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes))", "legendFormat": "Memory %", "refId": "A"}
      ]
    },
    {
      "datasource": {"type": "prometheus", "uid": "${datasource}"},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "max": 100,
          "min": 0,
          "thresholds": {"mode": "absolute", "steps": [
            {"color": "green", "value": null},
            {"color": "yellow", "value": 70},
            {"color": "red", "value": 85}
          ]},
          "unit": "percent"
        }
      },
      "gridPos": {"h": 5, "w": 6, "x": 12, "y": 1},
      "id": 4,
      "options": {"minVizHeight": 75, "minVizWidth": 75, "orientation": "auto", "reduceOptions": {"calcs": ["lastNotNull"], "fields": "", "values": false}, "showThresholdLabels": false, "showThresholdMarkers": true},
      "title": "Disk Usage",
      "type": "gauge",
      "targets": [
        {"datasource": {"type": "prometheus", "uid": "${datasource}"}, "expr": "100 - (node_filesystem_free_bytes{mountpoint=\"/\",fstype!=\"tmpfs\"} / node_filesystem_size_bytes{mountpoint=\"/\",fstype!=\"tmpfs\"} * 100)", "legendFormat": "Disk %", "refId": "A"}
      ]
    },
    {
      "datasource": {"type": "prometheus", "uid": "${datasource}"},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {"mode": "absolute", "steps": [
            {"color": "green", "value": null},
            {"color": "red", "value": 0.00001}
          ]},
          "unit": "short"
        },
        "overrides": []
      },
      "gridPos": {"h": 5, "w": 6, "x": 18, "y": 1},
      "id": 5,
      "options": {"colorMode": "background", "graphMode": "none", "justifyMode": "auto", "orientation": "auto", "reduceOptions": {"calcs": ["sum"], "fields": "", "values": false}, "textMode": "auto"},
      "title": "Cache Hit Rate (1h)",
      "type": "stat",
      "targets": [
        {"datasource": {"type": "prometheus", "uid": "${datasource}"}, "expr": "sum(increase(trading_bot_cache_hits_total{result=\"hit\"}[1h])) / sum(increase(trading_bot_cache_hits_total[1h]))", "legendFormat": "Hit Rate", "refId": "A"}
      ]
    },
    {
      "collapsed": false,
      "gridPos": {"h": 1, "w": 24, "x": 0, "y": 6},
      "id": 30,
      "title": "Time-Series",
      "type": "row"
    },
    {
      "datasource": {"type": "prometheus", "uid": "${datasource}"},
      "fieldConfig": {
        "defaults": {"color": {"mode": "palette-classic"}, "unit": "percent"}
      },
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 7},
      "id": 31,
      "options": {"legend": {"calcs": ["mean", "max"], "displayMode": "list", "placement": "bottom", "showLegend": true}, "tooltip": {"mode": "single", "sort": "none"}},
      "title": "CPU Usage Over Time",
      "type": "timeseries",
      "targets": [
        {"datasource": {"type": "prometheus", "uid": "${datasource}"}, "expr": "100 - (avg by(instance) (rate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)", "legendFormat": "CPU %", "refId": "A"}
      ]
    },
    {
      "datasource": {"type": "prometheus", "uid": "${datasource}"},
      "fieldConfig": {
        "defaults": {"color": {"mode": "palette-classic"}, "unit": "bytes"}
      },
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 7},
      "id": 32,
      "options": {"legend": {"calcs": ["mean", "max"], "displayMode": "list", "placement": "bottom", "showLegend": true}, "tooltip": {"mode": "single", "sort": "none"}},
      "title": "Memory Usage Over Time",
      "type": "timeseries",
      "targets": [
        {"datasource": {"type": "prometheus", "uid": "${datasource}"}, "expr": "node_memory_MemTotal_bytes - node_memory_MemAvailable_bytes", "legendFormat": "Used Memory", "refId": "A"},
        {"datasource": {"type": "prometheus", "uid": "${datasource}"}, "expr": "node_memory_MemTotal_bytes", "legendFormat": "Total Memory", "refId": "B"}
      ]
    },
    {
      "collapsed": false,
      "gridPos": {"h": 1, "w": 24, "x": 0, "y": 15},
      "id": 40,
      "title": "Cache Performance",
      "type": "row"
    },
    {
      "datasource": {"type": "prometheus", "uid": "${datasource}"},
      "fieldConfig": {
        "defaults": {"color": {"mode": "palette-classic"}, "unit": "reqps"}
      },
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 16},
      "id": 41,
      "options": {"legend": {"calcs": [], "displayMode": "list", "placement": "bottom", "showLegend": true}, "tooltip": {"mode": "multi", "sort": "none"}},
      "title": "Cache Hits vs Misses",
      "type": "timeseries",
      "targets": [
        {"datasource": {"type": "prometheus", "uid": "${datasource}"}, "expr": "rate(trading_bot_cache_hits_total{result=\"hit\"}[5m])", "legendFormat": "Hits – {{cache_name}}", "refId": "A"},
        {"datasource": {"type": "prometheus", "uid": "${datasource}"}, "expr": "rate(trading_bot_cache_hits_total{result=\"miss\"}[5m])", "legendFormat": "Misses – {{cache_name}}", "refId": "B"}
      ]
    }
  ],
  "refresh": "30s",
  "schemaVersion": 36,
  "style": "dark",
  "tags": ["trading", "system", "health"],
  "templating": {
    "list": [
      {
        "current": {},
        "hide": 0,
        "includeAll": false,
        "multi": false,
        "name": "datasource",
        "options": [],
        "query": "prometheus",
        "refresh": 1,
        "type": "datasource",
        "label": "Prometheus"
      }
    ]
  },
  "time": {"from": "now-1h", "to": "now"},
  "timepicker": {},
  "timezone": "browser",
  "title": "System Health",
  "uid": "system-health",
  "version": 1
}
