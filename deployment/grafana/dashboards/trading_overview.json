{
  "__inputs": [],
  "__requires": [
    {"type": "grafana", "id": "grafana", "name": "Grafana", "version": "9.0.0"},
    {"type": "datasource", "id": "prometheus", "name": "Prometheus", "version": "1.0.0"}
  ],
  "annotations": {"list": []},
  "description": "Trading Bot – main overview dashboard",
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "id": null,
  "links": [],
  "panels": [
    {
      "collapsed": false,
      "gridPos": {"h": 1, "w": 24, "x": 0, "y": 0},
      "id": 1,
      "title": "Portfolio Overview",
      "type": "row"
    },
    {
      "datasource": {"type": "prometheus", "uid": "${datasource}"},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "mappings": [],
          "thresholds": {"mode": "absolute", "steps": [
            {"color": "red", "value": null},
            {"color": "yellow", "value": 0},
            {"color": "green", "value": 1000}
          ]},
          "unit": "currencyUSD"
        }
      },
      "gridPos": {"h": 4, "w": 6, "x": 0, "y": 1},
      "id": 2,
      "options": {"colorMode": "background", "graphMode": "area", "justifyMode": "auto", "orientation": "auto", "reduceOptions": {"calcs": ["lastNotNull"], "fields": "", "values": false}, "textMode": "auto"},
      "title": "Portfolio Value (USD)",
      "type": "stat",
      "targets": [
        {"datasource": {"type": "prometheus", "uid": "${datasource}"}, "expr": "trading_bot_portfolio_value_usd", "legendFormat": "Portfolio Value", "refId": "A"}
      ]
    },
    {
      "datasource": {"type": "prometheus", "uid": "${datasource}"},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {"mode": "absolute", "steps": [
            {"color": "red", "value": null},
            {"color": "yellow", "value": -100},
            {"color": "green", "value": 0}
          ]},
          "unit": "currencyUSD"
        }
      },
      "gridPos": {"h": 4, "w": 6, "x": 6, "y": 1},
      "id": 3,
      "options": {"colorMode": "background", "graphMode": "area", "justifyMode": "auto", "orientation": "auto", "reduceOptions": {"calcs": ["lastNotNull"], "fields": "", "values": false}, "textMode": "auto"},
      "title": "Unrealised PnL (USD)",
      "type": "stat",
      "targets": [
        {"datasource": {"type": "prometheus", "uid": "${datasource}"}, "expr": "sum(trading_bot_pnl_usd)", "legendFormat": "PnL", "refId": "A"}
      ]
    },
    {
      "datasource": {"type": "prometheus", "uid": "${datasource}"},
      "fieldConfig": {
        "defaults": {"color": {"mode": "palette-classic"}, "unit": "short"}
      },
      "gridPos": {"h": 4, "w": 6, "x": 12, "y": 1},
      "id": 4,
      "options": {"colorMode": "value", "graphMode": "area", "justifyMode": "auto", "orientation": "auto", "reduceOptions": {"calcs": ["sum"], "fields": "", "values": false}, "textMode": "auto"},
      "title": "Total Orders (24h)",
      "type": "stat",
      "targets": [
        {"datasource": {"type": "prometheus", "uid": "${datasource}"}, "expr": "increase(trading_bot_orders_total[24h])", "legendFormat": "Orders", "refId": "A"}
      ]
    },
    {
      "datasource": {"type": "prometheus", "uid": "${datasource}"},
      "fieldConfig": {
        "defaults": {"color": {"mode": "thresholds"}, "unit": "s",
          "thresholds": {"mode": "absolute", "steps": [
            {"color": "green", "value": null},
            {"color": "yellow", "value": 0.1},
            {"color": "red", "value": 0.5}
          ]}
        }
      },
      "gridPos": {"h": 4, "w": 6, "x": 18, "y": 1},
      "id": 5,
      "options": {"colorMode": "value", "graphMode": "none", "justifyMode": "auto", "orientation": "auto", "reduceOptions": {"calcs": ["mean"], "fields": "", "values": false}, "textMode": "auto"},
      "title": "Avg Trade Latency",
      "type": "stat",
      "targets": [
        {"datasource": {"type": "prometheus", "uid": "${datasource}"}, "expr": "rate(trading_bot_trade_latency_seconds_sum[5m]) / rate(trading_bot_trade_latency_seconds_count[5m])", "legendFormat": "Latency", "refId": "A"}
      ]
    },
    {
      "collapsed": false,
      "gridPos": {"h": 1, "w": 24, "x": 0, "y": 5},
      "id": 10,
      "title": "Order Activity",
      "type": "row"
    },
    {
      "datasource": {"type": "prometheus", "uid": "${datasource}"},
      "fieldConfig": {
        "defaults": {"color": {"mode": "palette-classic"}, "unit": "reqps"}
      },
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 6},
      "id": 11,
      "options": {"legend": {"calcs": [], "displayMode": "list", "placement": "bottom", "showLegend": true}, "tooltip": {"mode": "single", "sort": "none"}},
      "title": "Order Rate by Symbol",
      "type": "timeseries",
      "targets": [
        {"datasource": {"type": "prometheus", "uid": "${datasource}"}, "expr": "rate(trading_bot_orders_total[5m])", "legendFormat": "{{symbol}} {{side}}", "refId": "A"}
      ]
    },
    {
      "datasource": {"type": "prometheus", "uid": "${datasource}"},
      "fieldConfig": {
        "defaults": {"color": {"mode": "palette-classic"}, "unit": "s"}
      },
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 6},
      "id": 12,
      "options": {"legend": {"calcs": [], "displayMode": "list", "placement": "bottom", "showLegend": true}, "tooltip": {"mode": "single", "sort": "none"}},
      "title": "Trade Latency (p50/p95/p99)",
      "type": "timeseries",
      "targets": [
        {"datasource": {"type": "prometheus", "uid": "${datasource}"}, "expr": "histogram_quantile(0.50, rate(trading_bot_trade_latency_seconds_bucket[5m]))", "legendFormat": "p50", "refId": "A"},
        {"datasource": {"type": "prometheus", "uid": "${datasource}"}, "expr": "histogram_quantile(0.95, rate(trading_bot_trade_latency_seconds_bucket[5m]))", "legendFormat": "p95", "refId": "B"},
        {"datasource": {"type": "prometheus", "uid": "${datasource}"}, "expr": "histogram_quantile(0.99, rate(trading_bot_trade_latency_seconds_bucket[5m]))", "legendFormat": "p99", "refId": "C"}
      ]
    },
    {
      "collapsed": false,
      "gridPos": {"h": 1, "w": 24, "x": 0, "y": 14},
      "id": 20,
      "title": "API Health",
      "type": "row"
    },
    {
      "datasource": {"type": "prometheus", "uid": "${datasource}"},
      "fieldConfig": {
        "defaults": {"color": {"mode": "palette-classic"}, "unit": "reqps"}
      },
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 15},
      "id": 21,
      "options": {"legend": {"calcs": [], "displayMode": "list", "placement": "bottom", "showLegend": true}, "tooltip": {"mode": "single", "sort": "none"}},
      "title": "API Request Rate",
      "type": "timeseries",
      "targets": [
        {"datasource": {"type": "prometheus", "uid": "${datasource}"}, "expr": "rate(trading_bot_api_requests_total[5m])", "legendFormat": "{{exchange}} {{endpoint}} {{status}}", "refId": "A"}
      ]
    },
    {
      "datasource": {"type": "prometheus", "uid": "${datasource}"},
      "fieldConfig": {
        "defaults": {"color": {"mode": "palette-classic"}, "unit": "s"}
      },
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 15},
      "id": 22,
      "options": {"legend": {"calcs": [], "displayMode": "list", "placement": "bottom", "showLegend": true}, "tooltip": {"mode": "single", "sort": "none"}},
      "title": "API Latency (p95)",
      "type": "timeseries",
      "targets": [
        {"datasource": {"type": "prometheus", "uid": "${datasource}"}, "expr": "histogram_quantile(0.95, rate(trading_bot_api_request_latency_seconds_bucket[5m]))", "legendFormat": "{{exchange}} {{endpoint}}", "refId": "A"}
      ]
    }
  ],
  "refresh": "30s",
  "schemaVersion": 36,
  "style": "dark",
  "tags": ["trading", "overview"],
  "templating": {
    "list": [
      {
        "current": {},
        "hide": 0,
        "includeAll": false,
        "multi": false,
        "name": "datasource",
        "options": [],
        "query": "prometheus",
        "refresh": 1,
        "type": "datasource",
        "label": "Prometheus"
      }
    ]
  },
  "time": {"from": "now-6h", "to": "now"},
  "timepicker": {},
  "timezone": "browser",
  "title": "Trading Bot – Overview",
  "uid": "trading-overview",
  "version": 1
}
