apiVersion: v1
kind: ConfigMap
metadata:
  name: bot-config
data:
  config.yaml: |
    env: production
    secrets_store: aws_secrets_manager
    nodes:
      - name: primary
        host: primary-replica
      - name: backup-1
        host: backup-replica-1
    redis:
      url: redis://redis-svc:6379/0
    symbols:
      spot:
        - BTCUSDT
        - ETHUSDT
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: bot-api
spec:
  replicas: 3
  selector:
    matchLabels:
      app: bot-api
  template:
    metadata:
      labels:
        app: bot-api
    spec:
      containers:
      - name: bot-api
        image: crypto-bot:latest
        command: ["python", "-m", "src.main"]
        env:
        - name: REDIS_URL
          valueFrom:
            secretKeyRef:
              name: bot-secrets
              key: redis_url
        - name: CONFIG_PATH
          value: /config/config.yaml
        volumeMounts:
        - name: config
          mountPath: /config
        livenessProbe:
          httpGet:
            path: /health
            port: 8001
          initialDelaySeconds: 30
          periodSeconds: 10
        readinessProbe:
          httpGet:
            path: /ready
            port: 8001
          initialDelaySeconds: 5
          periodSeconds: 5
      volumes:
      - name: config
        configMap:
          name: bot-config
---
apiVersion: v1
kind: Service
metadata:
  name: bot-svc
spec:
  selector:
    app: bot-api
  ports:
  - port: 8000
    targetPort: 8000
  type: LoadBalancer
---
apiVersion: v1
kind: Service
metadata:
  name: redis-svc
spec:
  selector:
    app: redis
  ports:
  - port: 6379
    targetPort: 6379
  type: ClusterIP
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: redis
spec:
  replicas: 1
  selector:
    matchLabels:
      app: redis
  template:
    metadata:
      labels:
        app: redis
    spec:
      containers:
      - name: redis
        image: redis:7
        ports:
        - containerPort: 6379
