[flake8]
max-line-length = 100
extend-ignore =
    # E203: whitespace before ':'
    E203,
    # W503: line break before binary operator
    W503,
    # E501: line too long (handled by black)
    E501,
    # E402: module level import not at top of file
    E402

exclude =
    .git,
    __pycache__,
    venv,
    .venv,
    env,
    build,
    dist,
    frontend,
    notebooks,
    *.egg-info,
    .tox,
    .pytest_cache,
    .mypy_cache

per-file-ignores =
    # F401: imported but unused (allow in __init__ files)
    __init__.py: F401
    # Allow assert statements in tests
    tests/*.py: S101

max-complexity = 15
statistics = True
count = True
